<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
           
    {% if app.user %}
        <div class="mb-3">
        <a class="nav-link" href="/"><img src = "img\logo.png"/></a>
            Vous êtes connecté(e) en tant que {{ app.user.userIdentifier }},<a  href="{{ path('app_logout') }}">Deconnexion</a>
        </div>
    {% block body %}{% endblock %}

    {%else%}
     <ul class="nav justify-content-end">
    <li class="nav-item">
    <a class="nav-link" href="/"><img src = "img\logo.png"/></a>
  </li>
  <li class="nav-item">
    <a href="{{ path('app_login') }}"><button type="button" class="btn btn-outline-primary me-2">Login</button></a>
  </li>
  <li class="nav-item">
        <a href="{{ path('app_register') }}"><button type="button" class="btn btn-outline-primary me-2">Register</button></a>
  </li>
</ul>
    {% endif %}

        </header>
        
    </body>
</html>
